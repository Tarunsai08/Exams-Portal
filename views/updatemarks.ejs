<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Teacher</title>
    <meta name="author" content="Tarun Sai" />
    <meta name="description" content="" />

    <!-- Tailwind -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
      @import url("https://fonts.googleapis.com/css?family=Karla:400,700&display=swap");
      .font-family-karla {
        font-family: karla;
      }
      .bg-sidebar {
        background: #3d68ff;
      }
      .cta-btn {
        color: #3d68ff;
      }
      .upgrade-btn {
        background: #1947ee;
      }
      .upgrade-btn:hover {
        background: #0038fd;
      }
      .active-nav-link {
        background: #1947ee;
      }
      .nav-item:hover {
        background: #1947ee;
      }
      .account-link:hover {
        background: #3d68ff;
      }
      #content::-webkit-scrollbar {
        width: 8px;
        background-color: var(--gray-200); /* Light background for dark mode */
      }
      #content::-webkit-scrollbar-thumb {
        background-color: #1947ee; /* Purple thumb color */
        border-radius: 6px;
      }
      #content:hover::-webkit-scrollbar {
        background-color: var(
          --gray-300
        ); /* Slightly darker on hover (dark mode) */
      }
    </style>
  </head>
  <body class="bg-gray-200 font-family-karla flex">
    <aside class="relative bg-sidebar h-screen w-64 hidden sm:block shadow-xl">
      <div class="p-6">
        <a
          href="/teacher"
          class="text-white text-3xl font-semibold uppercase hover:text-gray-300"
          >Teacher</a
        >
        
      </div>
      <nav class="text-white text-base font-semibold pt-3">
        <a
          href="/teacher"
          class="flex items-center opacity-75 hover:opacity-100 text-white py-4 pl-6 nav-item"
        >
          <i class="fas fa-tachometer-alt mr-3"></i>
          Dashboard
        </a>
        <a
          href="/updatemarks"
          class="flex items-center active-nav-link text-white py-4 pl-6 nav-item"
        >
          <i class="fas fa-sticky-note mr-3"></i>
          Update Marks
        </a>
        <a
          href="/uploadqp"
          class="flex items-center text-white opacity-75 hover:opacity-100 py-4 pl-6 nav-item"
        >
        <i class="fas fa-align-left mr-3"></i>
          Upload Question paper
        </a>
      </nav>
    </aside>

    <div class="w-full flex flex-col h-screen overflow-y-hidden">
      <!-- Desktop Header -->
      <header class="w-full items-center bg-white py-2 px-6 hidden sm:flex">
        <div class="w-1/2"><h1 class="text-xl font-bold text-gray-700">Exam Portal</h1></div>
        <div x-data="{ isOpen: false }" class="relative w-1/2 flex justify-end">
          <button
            @click="isOpen = !isOpen"
            class="realtive z-10 w-12 h-12 rounded-full overflow-hidden border-4 border-blue-400 hover:border-blue-300 focus:border-gray-300 focus:outline-none"
          >
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQavfQMBYKkiT6iVeBYUBIQVdbdDaRMhM_EhRvBFubN9w&s" />
          </button>
          <button
            x-show="isOpen"
            @click="isOpen = false"
            class="h-full w-full fixed inset-0 cursor-default"
          ></button>
          <div
            x-show="isOpen"
            class="absolute w-32 bg-white rounded-lg shadow-lg py-2 mt-16"
          >
            <a href="/teacher" class="block px-4 py-2 account-link hover:text-white"
              >Home</a
            >
            <a href="/logout" class="block px-4 py-2 account-link hover:text-white"
              >Sign Out</a
            >
          </div>
        </div>
      </header>


      <div id="content" class="w-full overflow-x-hidden border-t flex flex-col">
        <main class="w-full flex-grow p-6">
          <h1 class="text-3xl text-black pb-6">Update Marks</h1>
          <div class="w-full mt-2">
            <p class="text-xl pb-3 flex items-center">
              <i class="fas fa-list mr-3"></i> Students
            </p>
            <div class="bg-white overflow-auto">
              <table class="min-w-full bg-white">
                <thead class="bg-gray-800 text-white">
                  <tr>
                    <th
                      class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm"
                    >
                    AdmissionNumber
                    </th>
                    <th
                      class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm"
                    >
                    <%=teacher.subject%> marks (Section : <%=teacher.section%>)
                    </th>
                    <th
                      class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm"
                    >
                    Action
                    </th>
                  </tr>
                </thead>
                <tbody class="text-gray-700">
                  <% students.forEach((student) => { %>
                    <tr class="bg-white border-b">
                      <td class="w-1/3 text-left py-3 px-4"><%= student.rollno %></td>
                      <td class="w-1/3 text-left py-3 px-4">
                        <input type="number" class="px-2 py-1 rounded-md shadow-sm border-2 border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500" id="<%=student.rollno%>" value="<%=student.marks[subject]%>" placeholder="Edit marks">
                      </td>
                      <td class="w-1/3 text-left py-3 px-4">
                        <button class="px-4 py-1 text-white font-light tracking-wider bg-gray-800 hover:bg-gray-900 rounded" id="editbutton" value="<%=student.rollno%>">Edit</button>
                      </td>
                    </tr>
                  <% }) %>                  
                </tbody>
              </table>
            </div>
          </div>
        </main>

      </div>
    </div>

    <!-- AlpineJS -->
    <script
      src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"
      defer
    ></script>
    <!-- Font Awesome -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"
      integrity="sha256-KzZiKy0DWYsnwMF+X1DvQngQ2/FxF7MF3Ff72XcpuPs="
      crossorigin="anonymous"
    ></script>
    

    <script>
        const editButtons = document.querySelectorAll('#editbutton');
        const subject="<%=teacher.subject%>"
        editButtons.forEach((button) => {
          button.addEventListener('click', async function(e) {
            const rollno = e.target.value;
            const updatedMarks = document.getElementById(rollno).value;
            const results = await fetch('/updatemarks', {
              method: 'PUT',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ rollno: rollno, updatedMarks: updatedMarks,subject:subject })
            });
            const json=await results.json()
            window.alert('succesful')
          });
        });
    
      
    </script>
  </body>
</html>




